# Protobuf parameters
PROTOS=$(shell find proto -name '*.proto')
PROTOS_GO=$(PROTOS:.proto=.pb.go)

# == .PHONY ===================================================================
.PHONY: build lint test protobuf

# == all ======================================================================
all: build

# == build ====================================================================
build:
	go build ./...

# == lint =====================================================================
lint:
	golint ./...

# == test =====================================================================
test:
	go test ./...

# == protobuf =================================================================
protobuf: $(PROTOS_GO)

%.pb.go: %.proto
	protoc --go_out=. -Iproto $<
